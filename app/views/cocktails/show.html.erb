<h1><%= @cocktail.name %></h1>
<br>
<h3>Ingredients (<%= link_to "Add Dose", new_cocktail_dose_path(@cocktail) %>):</h3>
<div class="dose-list">
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <h5><%= dose.ingredient.name %>  </h5>
      <p><%= dose.description %></p>
      <p><%= link_to "Delete", dose_path(dose), method: :delete %></p>
    </li>
    <% end %>
  </ul>

</div>

<%= link_to "Back to Cocktails", cocktails_path %>
